generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  ID          Int                       @id @default(autoincrement())
  SKU         String                    @unique
  title       String
  price       Float
  description String                    @db.Text()
  brand       String
  stock       Int
  category    String
  relations   SKU_PartNumber_Relation[]
}

model Provider {
  ID_Provider Int                       @id @default(autoincrement())
  name        String                    @unique
  contact     String
  direction   String                    @db.Text()
  relations   SKU_PartNumber_Relation[]
}

model SKU_PartNumber_Relation {
  ID           Int    @id @default(autoincrement())
  SKU_Relation String
  sku_provider String
  ID_Provider  Int
  PartNumber   String
  price        Float
  stock        Int

  products  Product  @relation(fields: [SKU_Relation], references: [SKU])
  providers Provider @relation(fields: [ID_Provider], references: [ID_Provider])
}
